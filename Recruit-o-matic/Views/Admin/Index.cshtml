@model Recruit_o_matic.ViewModels.Admin.HomeViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid">
    <div class="span8">
        <h2>Index</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-success"><i class="icon-user icon-white"></i>Create New</a>
        </p>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Published</th>
                <th>Closing Date</th>
                <th>Applicants</th>
                <th></th>
            </tr>

            @foreach (var item in Model.Vacancies)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title

                        @if (item.Published)
                        {
                            <span class="label label-success">Published</span>
                        }
                        else
                        {
                            <span class="label label-default">Not Published</span>
                        }

                    </td>
                    <td>@item.PublishedOn</td>
                    <td>@item.ClosingDate.ToShortDateString()
                        @if (item.ClosingDate - DateTime.Now <= new System.TimeSpan(3, 0, 0, 0))
                        {
                            <span class="label label-warning">Closing Soon</span>
                        }

                    </td>
                    <td>@Model.Counts.Where(x => x.VacancyId == item.Id).Select(x => x.Count).FirstOrDefault()</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-mini btn-danger" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-mini btn-info" })

                        @if (item.Published)
                        {
                            @Html.ActionLink("Suspend", "Publish", new { id = item.Id }, new { @class = "btn btn-mini btn-warning" });
                        }
                        else
                        {
                            @Html.ActionLink("Publish", "Publish", new { id = item.Id }, new { @class = "btn btn-mini btn-success" });
                        }
                    </td>
                </tr>
            }

        </table>

    </div>

    <div class="span4">
        other stuff

    </div>

</div>


