@model Recruit_o_matic.ViewModels.Admin.HomeViewModel

@{
    ViewBag.Title = "Index";
}

<div class="row-fluid">
    <div class="span8">
        <h2>Index</h2>

        <p>
            <a href="@Url.Action("Create")" class="btn btn-success"><i class="icon-user icon-white"></i>Create New Vacancy</a>
        </p>
        <table class="table">
            <caption>Current Published Vacancies</caption>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Published</th>
                <th>Closing Date</th>
                <th>Applicants</th>
                <th></th>
            </tr>

            @foreach (var item in Model.Vacancies)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.PublishedOn</td>
                    <td>@item.ClosingDate.ToShortDateString()
                        @if (item.ClosingDate - DateTime.Now <= new System.TimeSpan(3, 0, 0, 0))
                        {
                            <span class="label label-warning">Closing Soon</span>
                        }
                    </td>
                    <td>@Model.Counts.Where(x => x.VacancyId == item.Id).Select(x => x.Count).FirstOrDefault()</td>
                    <td style="text-wrap:none">
                        <div class="btn-group">
                        <a class="btn btn-mini btn-info" href="@Url.Action("Edit", new { id = item.Id })"><i class="icon-edit icon-white"></i>&nbsp;Edit</a>
                        <a class="btn btn-mini btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><i class="icon-trash icon-white"></i>&nbsp;Delete</a>
                        <a class="btn btn-mini btn-success" href="@Url.Action("Details", new { id = item.Id })"><i class="icon-info-sign icon-white"></i>&nbsp;Details</a>
</div>

                       @* @if (item.Published)
                        {
                            @Html.ActionLink("Suspend", "Publish", new { id = item.Id }, new { @class = "btn btn-mini btn-warning" });
                        }
                        else
                        {
                            @Html.ActionLink("Publish", "Publish", new { id = item.Id }, new { @class = "btn btn-mini btn-success" });
                        }*@
                    </td>
                </tr>
            }

        </table>

    </div>

    <div class="span4">
        

    </div>

</div>


