@model Recruit_o_matic.ViewModels.Admin.IndexVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("Create")" class="btn btn-success"><i class="icon-user icon-white"></i> Create New</a>
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Published</th>
        <th>Closing Date</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Positions)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title

                @if (item.Published)
                {
                    <span class="label label-success">Published</span>
                }
                else
                {
                     <span class="label label-default">Published</span>
                }

            </td>
            <td>@item.PublishedOn</td>
            <td>@item.ClosingDate

                

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { }, new { @class = "btn btn-mini btn-info"/* id=item.PrimaryKey */ })
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-mini btn-danger" })
                 @Html.ActionLink("Publish", "Publish", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-mini btn-success" })
            </td>
        </tr>
    }

</table>
