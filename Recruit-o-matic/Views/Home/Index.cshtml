@model Recruit_o_matic.ViewModels.HomeViewModel

<!-- Main hero unit for a primary marketing message or call to action -->
      <div class="hero-unit">
        <h1>Hello, world!</h1>
        <p>This is a template for a simple marketing or informational website. It includes a large callout called the hero unit and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
        <p><a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
      </div>
<div class="row">

    <div class="span12">
        <h2>Current Vacancies</h2>
        <table class="table">

            @foreach (var item in Model.currentPositions)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.ClosingDate.ToShortDateString()</td>
                    <td>
                        @Html.ActionLink("Apply", "Details", "Vacancy", new { id = item.Id }, new { @class = "btn btn-success" })
                    </td>
                </tr>
    }

        </table>

</div>
    </div>

      